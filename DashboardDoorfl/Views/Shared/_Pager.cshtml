@model DashboardDoorfl.Models.Pager

<div class="container">
    @if(Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-start">
            @if(Model.CurrentPage > 1){
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="1">Первая</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="@(Model.CurrentPage - 1)">Пред.</a>
                </li>
            }
            @for(var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="@pge"></a>
                </li>
            }
            @if(Model.CurrentPage < Model.TotalPages){
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="@(Model.CurrentPage + 1)">След.</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="@(Model.TotalPages)">Посл.</a>
                </li>
            }
        </ul>
    }
</div>